<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/small_margin_padding" >

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin_padding" >

        <ToggleButton
            android:id="@+id/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_toggle"
            android:padding="@dimen/small_margin_padding"
            android:textColor="@color/common_text_color"
            android:textOff="  B  "
            android:textOn="  B  "
            android:textSize="14sp" />

        <ToggleButton
            android:id="@+id/italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin_padding"
            android:background="@drawable/button_toggle"
            android:padding="@dimen/small_margin_padding"
            android:textColor="@color/common_text_color"
            android:textOff="  I  "
            android:textOn="  I  "
            android:textSize="14sp" />

        <ToggleButton
            android:id="@+id/underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin_padding"
            android:background="@drawable/button_toggle"
            android:padding="@dimen/small_margin_padding"
            android:textColor="@color/common_text_color"
            android:textOff="  U  "
            android:textOn="  U  "
            android:textSize="14sp" />

        <ToggleButton
            android:id="@+id/html"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin_padding"
            android:background="@drawable/button_toggle"
            android:padding="@dimen/small_margin_padding"
            android:textColor="@color/common_text_color"
            android:textOff=" HTML "
            android:textOn=" HTML "
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/normal_margin_padding"
        android:gravity="top"
        android:hint="@string/note_content_hint_edit_text"
        android:inputType="textMultiLine"
        android:padding="@dimen/normal_margin_padding" />

</LinearLayout>